@model DutyEditModel

@{
	ViewBag.Title = Resources.Resource.Duty;
	var rand = CommonHelper.GetVersionRandomNo();
}
<style>
	.datetime{
		position:relative;
	}
</style>

<h3>@ViewBag.Title</h3>
<form>
	<div class="form-group">
		<label>@Resources.Resource.DutyOn</label>
		<div class="input-group time">
			<input class="form-control" id="dutyOn" placeholder="HH:MM AM/PM" data-time="@Model.Duty.DutyOn" value="@Model.Duty.DutyOn" /><span class="input-group-append input-group-addon pointer"><span class="input-group-text"><i class="fa fa-clock"></i></span></span>
		</div>
	</div>
	<div class="form-group">
		<label>@Resources.Resource.DutyOff</label>
		<div class="input-group time">
			<input class="form-control" id="dutyOff" placeholder="HH:MM AM/PM" data-time="@Model.Duty.DutyOff" value="@Model.Duty.DutyOff" /><span class="input-group-append input-group-addon pointer"><span class="input-group-text"><i class="fa fa-clock"></i></span></span>
		</div>
	</div>
</form>


@Html.AntiForgeryToken()
<button type="button" id="btnSave" class="btn btn-success">@Resources.Resource.Save</button>

<div id="infoblk" data-removetxt="@Resources.Resource.Remove"></div>
<script src="~/Scripts/ts/js/settings/duty.js?v=@rand"></script>

