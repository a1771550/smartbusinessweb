@model CategoryEditModel

@{
    CategoryModel Category = Model.Category;
    bool edit = Category.Id > 0;
    int rand = CommonHelper.GetVersionRandomNo();
}
<h2>@ViewBag.Title</h2>
@using (Html.BeginForm("Edit", "Category", FormMethod.Get, new { @Id = "frmCategory",@class="my-4" }))
{
    @Html.AntiForgeryToken()

    <input type="hidden" id="Id" value="@(edit?Category.Id:0)" />
	<input type="hidden" id="Removable" value="@(edit?Category.Removable:false)" />


<div class="row">
    <div class="col-12 col-md-3">
        <div class="form-group required">
            <label>@Resources.Resource.Name (@Resources.Resource.EN)</label>
            <input type="text" id="catName" class="form-control catname" value="@(edit?Category.catName:"")" />
        </div>
    </div>
    <div class="col-12 col-md-3">
		<div class="form-group">
			<label>@Resources.Resource.Name (@Resources.Resource.TC)</label>
			<input type="text" id="catNameTC" class="form-control catname" value="@(edit?Category.catNameTC:"")" />
		</div>
    </div>
    <div class="col-12 col-md-3">
		<div class="form-group">
			<label>@Resources.Resource.Name (@Resources.Resource.SC)</label>
			<input type="text" id="catNameSC" class="form-control catname" value="@(edit?Category.catNameSC:"")" />
		</div>
    </div>
    <div class="col-12 col-md-3">
        <div class="form-group required">
            <label>@Resources.Resource.DisplayOrder</label>
            <input type="number" id="displayOrder" class="form-control" value="@(edit?Category.displayOrder:1)" />
        </div>
    </div>

</div>
<div class="row">
    <div class="col-12 col-md-3">
        <div class="form-group">
            <label>@Resources.Resource.Description (@Resources.Resource.EN)</label>
            <textarea id="catDesc" class="form-control" rows="3">@(edit?Category.catDesc:"")</textarea>
        </div>
    </div>
    <div class="col-12 col-md-3">
		<div class="form-group">
			<label>@Resources.Resource.Description (@Resources.Resource.TC)</label>
			<textarea id="catDescTC" class="form-control" rows="3">@(edit?Category.catDescTC:"")</textarea>
		</div>
    </div>
    <div class="col-12 col-md-3">
        <div class="form-group">
            <label>@Resources.Resource.Description (@Resources.Resource.SC)</label>
			<textarea id="catDescSC" class="form-control" rows="3">@(edit?Category.catDescSC:"")</textarea>
        </div>
    </div>
</div>

    <button type="button" id="btnSaveCat" class="btn btn-success">@Resources.Resource.Save</button>
}
<div>
    @Html.ActionLink(Resources.Resource.BackToList, "Index")
</div>
@Html.Partial("_WaitingModal")
<div id="infoblk"></div>
<script src="~/Scripts/ts/js/item/category/edit.js?v=@rand"></script>