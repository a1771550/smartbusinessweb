@model PPWLib.Models.DayEndsModel

@{
    int lang = (int)HttpContext.Current.Session["CurrentCulture"];
    string importpathmsg = string.Format(Resources.Resource.ImportPathMsg, Model.ImportBasePath);
    string absschecked = ViewBag.DefaultCheckoutPortal.ToLower() == "abss" ? "checked" : "";
    string kingdeechecked = ViewBag.DefaultCheckoutPortal.ToLower() == "kingdee" ? "checked" : "";
    ViewBag.Title = (string)HttpContext.Current.Session["ImportFrmCentralPageTitle"];
    int rand = CommonHelper.GetVersionRandomNo();
}

<h3>@ViewBag.Title</h3>
@using (Html.BeginForm("DoImportFrmCentral", "DataTransfer", FormMethod.Post, new { @id = "frmImport" }))
{
    @Html.AntiForgeryToken() 
   
<div class="row justify-content-end my-3 mx-1">
    <button type="button" class="mx-3 btn btn-info" id="btnGetPath">@Resources.Resource.GetPath</button>

    <button type="button" class="btn btn-success mr-3 import" data-type="customer" id="btnImportCustomer">@string.Format(Resources.Resource.ImportFormat, Resources.Resource.Customer)</button>

    <button type="button" class="btn btn-outline-dark mr-3 import" data-type="supplier" id="btnImportSupplier">@string.Format(Resources.Resource.ImportFormat, Resources.Resource.Supplier)</button>
    @if (ViewBag.DefaultCheckoutPortal.ToLower() == "abss")
    {
        <button type="button" class="btn btn-warning import mr-3" data-type="currency" id="btnImportCurrency">@string.Format(Resources.Resource.ImportFormat, Resources.Resource.Currency)</button>
    }

    @{
        bool abssemployee = ConfigurationManager.AppSettings["AbssEmployeeMode"] == "1";
        if (abssemployee)
        {
            <button type="button" class="btn btn-outline-success mr-3" data-type="employee" id="btnImportEmployee">@string.Format(Resources.Resource.ImportFormat, Resources.Resource.Employee)</button>
        }
    }

    <button type="button" class="btn btn-info mr-3 import" data-type="item" id="btnImportItem">@string.Format(Resources.Resource.ImportFormat, Resources.Resource.Item)</button>


    @if (ViewBag.DefaultCheckoutPortal.ToLower() == "abss")
    {
        <button type="button" class="btn btn-outline-success mr-3 import" data-type="account" id="btnImportAccount">@string.Format(Resources.Resource.ImportFormat, Resources.Resource.ItemAccount)</button>
        <button type="button" class="btn btn-outline-warning import mr-3" data-type="job" id="btnImportJob">@string.Format(Resources.Resource.ImportFormat, Resources.Resource.Job4Myob)</button>
        <button type="button" class="btn btn-outline-info import" data-type="tax" id="btnImportTax">@string.Format(Resources.Resource.ImportFormat, Resources.Resource.Tax)</button>
    }


    <input type="hidden" id="filename" name="filename" />
</div>
    if (Model.DataTransferMode == PPWCommonLib.BaseModels.DataTransferMode.NoInternet)
    {
        <div id="importpathmsg" class="alert alert-success my-3">@importpathmsg</div>
    }
    @Html.HiddenFor(model => model.mode)
}


<div id="waitingModal">
    <img src="~/Images/giphy.gif" alt="@Resources.Resource.PleaseWait" />
</div>

@{
    string confirmmsg = lang == 2 ? Resources.Resource.Confirm + " " + Resources.Resource.Import : Resources.Resource.Confirm + Resources.Resource.Import;
}
<div id="infoblk" class="hide" data-lang="@lang" data-confirmmsg="@confirmmsg" data-myobfilename="@Model.MyobFileName" data-importdonemsg="@HttpContext.Current.Session["ABSSToSBOK"].ToString()" data-importngmsg="@Resources.Resource.ABSSToSBNG"></div>

<script type="text/javascript" src="~/Scripts/daterangepicker/moment.min.js"></script>
<script type="text/javascript" src="~/Scripts/daterangepicker/daterangepicker.min.js"></script>
<link rel="stylesheet" type="text/css" href="~/Scripts/daterangepicker/daterangepicker.css" />
<script type="text/javascript" src="~/Scripts/DataTables/dataTables.dateTime.min.js"></script>
<script src="~/Scripts/ts/js/datatransfer/importfrmcentral.js?v=@rand"></script>
<script>
    $(function () {
        //isDisabled
        $('#mode').val(0);
        let isoffline = parseInt($('#infoblk').data('offline')) === 1;
        if (isoffline) {
            $('#btnGetPath').removeClass('hide');
            $('#dateblk').addClass('hide');
        } else {
            $('#btnGetPath').addClass('hide');
            $('#dateblk').removeClass('hide');
        }
        initModals();
        initDatePickers();
    });
</script>