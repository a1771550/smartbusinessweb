@model PPWLib.Models.CustomerAttributeView
@{
    var action = ViewData != null ? (string)ViewData["action"] : "Create";
}
<div id="customAttributeModal">
    @using (Html.BeginForm(action, "CustomAttribute", FormMethod.Post, new { @Id = "frmAttribute" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <div class="form-group">
                <label class="control-label" for="attrName">@Resources.Resource.AttributeName</label>
                <div class="">
                    @Html.EditorFor(model => model.attrName, new { htmlAttributes = new { @class = "form-control" } })

                </div>
            </div>

            <div id="attvalblk" class="form-group">
                <label class="control-label" for="attrValue">@Resources.Resource.CustomAttributeValue</label>
                <div class="">
                    @*<input type="text" id="attrValue" class="form-control" />*@
                    @Html.EditorFor(model => model.attrValue, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                <div class="">
                    <button type="button" id="btnSaveCustomAttr" class="btn btn-success">@Resources.Resource.Save</button>
                    @Html.HiddenFor(model => model.attrId)
                </div>
            </div>
        </div>
    }
</div>
