@{
    bool editmode = (bool)ViewData["editmode"];
    string status = (string)ViewData["status"];
    bool approvalmode = (bool)ViewData["approvalmode"];
}
<div class="form-group">
    @if (approvalmode && status.ToLower() == PurchaseStatus.created.ToString())
    {
        @*<a role="button" href="#" id="btnEdit" class="btn btn-info mr-2">@Resources.Resource.Edit</a>
            <button id="" type="button" class="btn btn-primary mr-2 my-2 request makeorder btnRequestApproval hide" style="height:5em;">@Resources.Resource.Request4Approval</button>*@
        <a role="button" href="#" id="btnBill" class="btn btn-primary mr-2">@Resources.Resource.ReceiveItems</a>
        <a role="button" href="#" id="btnSave" class="btn btn-success mr-2">@Resources.Resource.Save</a>
    }
    else if (editmode && status.ToLower() != PurchaseStatus.opened.ToString())
    {
        <a role="button" href="#" id="btnBill" class="btn btn-primary mr-2">@Resources.Resource.ReceiveItems</a>
        <a role="button" href="#" id="btnSave" class="btn btn-success mr-2">@Resources.Resource.Save</a>
    }
    else
    {
        <a role="button" href="#" id="btnSave" class="btn btn-success mr-2">@Resources.Resource.Save</a>
    }

    @if (editmode)
    {
        <button type="button" class="btn btn-warning" id="btnFile">@Resources.Resource.UploadFile</button>
        <button type="button" class="btn btn-primary ml-2 hide" id="btnViewFile">@Resources.Resource.ViewFile</button>
    }

</div>

