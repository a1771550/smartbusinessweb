@{ 
    MyobCustomerModel customer = ViewData["MyobCustomer"] as MyobCustomerModel;
    var paymentIsDue = customer == null ? "" : customer.PaymentTermsDesc;
    var balancedueDays = customer == null ? 0 : customer.BalanceDueDays;
}
<div id="customerTermsModal">
    <div class="container">
        <form>
            <div class="form-group">
                <label for="paymentIsDue">@Resources.Resource.PaymentIsDue</label>
                <input type="text" class="form-control" id="paymentIsDue" readonly value="@paymentIsDue">
            </div>
            <div class="form-group">
                <label for="balancedueDays">@Resources.Resource.BalanceDueDays</label>
                <input type="number" class="form-control" id="balancedueDays" readonly value="@balancedueDays">
            </div>            
        </form>
    </div>
</div>
