@{    
    int maxlength = ViewData["maxlength"] == null ? int.Parse(ConfigurationManager.AppSettings["MaxDescMemoRemarkCharNum"]) : Convert.ToInt32(ViewData["maxlength"]);
}
<div id="textareaModal">
    <div class="container">
        <form>
			<div class="form-group">
				@*<label for="" class="form-label"><span id="lblField">@strfieldname</span></label>*@
				<textarea id="txtField" class="form-control" style="max-width:none;" rows="10" maxlength="@maxlength"></textarea>
				<span class="danger small font-weight-bold">@string.Format(Resources.Resource.MaxCharLengthAllowed, maxlength)</span>
			</div>
        </form>
    </div>
</div>