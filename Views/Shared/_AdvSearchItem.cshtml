@model  IEnumerable<SBLib.Models.GlobalAttributeModel>
<form class="row form-inline px-2 py-2 my-1 border-bottom-dashed">
    <div class="col-12 col-sm-4">
        <select class="form-control attrName">
            @foreach(var attr in Model.OrderBy(x=>x.attrOrder))
            {
                <option value="@attr.gattrId">@attr.attrName</option>
            }
        </select>       
    </div>
    <div class="col-12 col-sm-2">
        @Html.Partial("_Operator")
    </div>
    <div class="col-12 col-sm-4">
        <input type="text" class="form-control attrval" />
    </div>
    <div class="col-12 col-sm-2">
        <span class="btn btn-primary mx-1 btnsmall btnplus"><i class="fa fa-plus"></i></span>
        <span class="btn btn-danger btnsmall btnminus"><i class="fa fa-minus"></i></span>
    </div>
</form>
