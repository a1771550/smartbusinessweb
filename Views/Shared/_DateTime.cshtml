@{
    bool required = ViewData["required"] == null ? false : Convert.ToBoolean(ViewData["required"]);
    string requiredtxt = required ? "required" : "";
}
<div class="form-group @requiredtxt">
    <label class="control-label" for="strDateTime">@Resources.Resource.DateTime</label> 
        <input type="datetime" class="form-control datetimepicker" id="strDateTime" />
</div>
