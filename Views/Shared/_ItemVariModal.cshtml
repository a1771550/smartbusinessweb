@{ 
    string status = ViewData["status"] == null ? "" : (string)ViewData["status"];
    bool isdeliver = (!string.IsNullOrEmpty(status) && (status == "deliver" || status == "partialdeliver"));
}
<div id="itemVariModal" style="background-color: #eae3fc;">
    <div class="container">
        <h4 id="ivLocSeqItem"></h4>

        <table id="tblIv" class="table table-bordered table-condensed">
            <thead class="gray-header">
                <tr>
                    <th>@Resources.Resource.PurchaseOrder</th>
                    <th>@Resources.Resource.ItemVariations</th>
                    @if (!isdeliver)
                    {
                        <th class="text-right">@Resources.Resource.DeliveredQty</th>
                        <th class="text-right">@Resources.Resource.CurrentIvTypeSellableQty/@string.Format(Resources.Resource.TotalFormat, Resources.Resource.Qty)</th>
                    }
                </tr>
            </thead>
            <tbody></tbody>

            <tfoot>
                <tr class="my-auto">
                    <td colspan="5">
                        <div class="form-group row justify-content-end my-auto">
                            <label for="totalivdelqty" class="col-form-label">@string.Format(Resources.Resource.DeliveryFormat, Resources.Resource.Qty)</label>

                            <input type="number" class="form-control mx-3" readonly id="totalivdelqty" />

                        </div>

                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
