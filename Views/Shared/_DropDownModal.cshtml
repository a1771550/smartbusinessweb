			<input type="checkbox" class="form-check-input" id="chkEmailNotification" checked />
			<label class="form-check-label" for="chkEmailNotification">@Resources.Resource.NotificationEmailWillBeSentToSalesperson</label>
		</div>*@
	}
</div>
