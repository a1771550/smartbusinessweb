@{
    bool edit = (bool)ViewData["edit"];
    List<SBCommonLib.BaseModels.Country> Countries = (List<SBCommonLib.BaseModels.Country>)ViewData["Countries"];
    //Response.Write("selectedCountry:" + (string)ViewData["SelectedCountry"]);
    //return;

    string selectedCountry = (ViewData["SelectedCountry"] == null || string.IsNullOrEmpty((string)ViewData["SelectedCountry"]))?"": (string)ViewData["SelectedCountry"];



}

<label id="lblCountry" class="d-block" for="drpCountry" data-country="@Resources.Resource.Country" data-region="@Resources.Resource.Region">@Resources.Resource.Region</label>
<select id="drpCountry" class="form-control">
    <option value="">-- @Resources.Resource.Select --</option>
    @foreach (var country in Countries)
    {
        var _selected = "";
        if (edit)
        {
            _selected = selectedCountry == country.CountryName ? "selected" : "";
        }
        else
        {
            _selected = country.CountryName == Resources.Resource.HongKong ? "selected" : "";
        }

        <option value="@country.CountryID" @_selected>@country.CountryName</option>
    }
</select>

